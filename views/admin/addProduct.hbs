<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ashion Template">
    <meta name="keywords" content="Ashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ashion | Template</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap"
        rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="/product-detail/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/product-detail/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/product-detail/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/product-detail/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="/product-detail/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="/product-detail/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/product-detail/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/product-detail/css/style.css" type="text/css">
</head>

<body>
    <!-- Offcanvas Menu End -->

    <!-- Header Section Begin -->
    <header class="header">
        <div class="container-fluid">
            <div class="row" style="height: 4rem;">
                <div class="col-xl-3 col-lg-2">
                    <div class="header__logo">
                        <a href="./index.html"><img src="/product-detail/img/logo.png" style="width: 22%;" alt=""></a>
                    </div>
                </div>
                
            </div>
            <div class="canvas__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->


    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <form action="/admin/addproducts" class="checkout__form" method="post" enctype="multipart/form-data">
                <div class="row">

                    <div class="col-lg-12" style="display: flex; justify-content: center;">
                        <div style="width: 40rem;">
                        <h5>Add product</h5>
                        <div class="row">
                            <div class="col-lg-12 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Product Name<span>*</span></p>
                                    <input type="text"  name="productname">
                                </div>
                            </div>
                             <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Category<span>*</span></p>
                                   <select name="category" id="" style="width: 100%;height: 44px;">
                                   <option value="">Select category</option>
                                   {{#each category}}
                                    <option value="{{this.newcategories}}">{{this.newcategories}}</option>
                                   {{/each}}
                                   </select>
                                </div>
                            </div>
                             <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Brand<span>*</span></p>
                                   <select name="brand" id="" style="width: 100%;
    height: 44px;">
                                   <option value="">Select brand</option>
                                   {{#each brands}}
                                    <option value="{{this.newbrands}}">{{this.newbrands}}</option>
                                   {{/each}}
                                   </select>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6" style="    margin-top: 1rem;">
                                <div class="checkout__form__input">
                                    <p>Prize<span>*</span></p>
                                    <input type="text"   name="prize">
                                </div>
                            </div>
                               <div class="col-lg-6 col-md-6 col-sm-6" style="    margin-top: 1rem;">
                                <div class="checkout__form__input">
                                    <p>Toatal MRP<span>*</span></p>
                                    <input type="text"  name="MRP">
                                </div>
                            </div>
                              <div class="col-lg-6 col-md-6 col-sm-6" style="    margin-top: 1rem;">
                                <div class="checkout__form__input">
                                    <p>Stock<span>*</span></p>
                                    <input type="text"   name="quantity">
                                </div>
                            </div>
                            
                            <div class="col-lg-12">
                                <div class="checkout__form__input">
                                    <p>Description<span>*</span></p>
                                    <input type="text" name="description">
                                </div>
                                <div class="checkout__form__input">
                                    <p>Main image<span>*</span></p>
                                    <input type="file"name="image" style="width: 50%;">
                                </div>

                                <div class="checkout__form__input">
                                    <p>Sub image<span>*</span></p>
                                    <input type="file" name="subimage" multiple  style="width: 50%;">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="site-btn">Add Product</button>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- Checkout Section End -->

    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search End -->

    <!-- Js Plugins -->
    <script src="/product-detail/js/jquery-3.3.1.min.js"></script>
    <script src="/product-detail/js/bootstrap.min.js"></script>
    <script src="/product-detail/js/jquery.magnific-popup.min.js"></script>
    <script src="/product-detail/js/jquery-ui.min.js"></script>
    <script src="/product-detail/js/mixitup.min.js"></script>
    <script src="/product-detail/js/jquery.countdown.min.js"></script>
    <script src="/product-detail/js/jquery.slicknav.js"></script>
    <script src="/product-detail/js/owl.carousel.min.js"></script>
    <script src="/product-detail/js/jquery.nicescroll.min.js"></script>
    <script src="/product-detail/js/main.js"></script>

</body>

</html>


